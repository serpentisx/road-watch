<context:property-placeholder />
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <bean id="mailSender" class="org.springframework.mail.javamail.JavaMailSenderImpl">
        <property name="host" value="${HOST_VALUE}" />
        <property name="port" value="${PORT_VALUE}" />
        <property name="username" value="${USERNAME_VALUE}" />
        <property name="password" value="${PASSWORD_VALUE}" />

        <property name="javaMailProperties">
            <props>
                <prop key="mail.smtp.auth">true</prop>
                <prop key="mail.smtp.starttls.enable">true</prop>
                <prop key="mail.smtp.ssl.trust">${SMPT_SSL}</prop>
            </props>
        </property>
    </bean>

    <bean id="mailMail" class="app.service.Mail">
        <property name="mailSender" ref="mailSender" />
    </bean>

</beans>
